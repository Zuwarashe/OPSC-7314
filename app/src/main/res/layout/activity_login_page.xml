<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/miniLogo"
        android:layout_width="97dp"
        android:layout_height="73dp"
        android:layout_marginLeft="155dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/signupLbl"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="-85dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="Login" />


    <TextView
        android:id="@+id/emailLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-215dp"
        android:textStyle="bold"
        android:text="Email Address" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-92dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/customtxtbox"
        android:ems="19"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/passwordLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="-350dp"
        android:textStyle="bold"
        android:text="Password" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTxtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-63dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="24dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customtxtbox"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="-365dp"
        android:text="@string/forgot" />

    <Button
        android:id="@+id/createAccBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="-125dp"
        android:backgroundTint="#D67229"
        android:text="Login"
        app:cornerRadius="9dp" />


    <TextView
        android:id="@+id/orLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="-180dp"
        android:text="Or" />

    <View
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="11dp"
        android:background="#A9A9A9"
        />

    <View
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="-375dp"
        android:background="#A9A9A9"
        />

    <Button
        android:id="@+id/gmailBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="-160dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Sign Up with Google"
        app:cornerRadius="9dp"
        app:strokeColor="#A9A9A9"
        android:textStyle="bold"
        app:strokeWidth="1dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="-263dp"
        app:srcCompat="@drawable/gmail_svgrepo_com" />


    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-110dp"
        android:layout_marginTop="525dp"
        android:backgroundTint="#316FF6"
        android:text="Sign Up with Facebook"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="9dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="547dp"
        android:layout_marginLeft="-275dp"
        app:srcCompat="@drawable/facebook_color_svgrepo_com" />

    <Button
        android:id="@+id/bioBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Login with Biometrics"
        android:textColor="@color/black"
        android:layout_marginTop="587dp"
        android:layout_marginLeft="-94dp"
       />

    <ImageView
        android:id="@+id/fingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="-273dp"
        app:srcCompat="@drawable/baseline_fingerprint_24" />

    <TextView
        android:id="@+id/questiontxt"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="-00sp"
        android:text="Not a member?" />

    <TextView
        android:id="@+id/linktxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="-5dp"
        android:text="@string/signup"
        android:textStyle="bold"
        />


</LinearLayout>
