<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Cookware">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtnBack"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/design_default_color_background"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/backk" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/imageBtnMore"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@color/design_default_color_background"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCookware"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:text="Cookware"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnIngredients"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:text="Ingredients"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnInstructions"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:text="Instructions"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>